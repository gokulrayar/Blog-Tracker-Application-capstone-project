@model IEnumerable<DAL.EmpInfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee List</h1>

<p>
    

    <a asp-action="Create" class="create-button"> Add New</a>
</p>
<table class="table" >
    <thead>
        <tr style="background-color: grey;">
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfJoining)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr style="background-color:lightblue;">
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfJoining)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassCode)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Email" class="red-btn">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Email" class="red-btn">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Email" class="red-btn">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<style>
    .create-button {
        background-color: green;
        color: white; 
        padding: 5px 10px; 
        text-decoration: none; 
        display: inline-block; 
    }
</style>
<style>
    .red-btn {
        background-color: red;
        color: white;
        padding: 5px 10px;
        border: none;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        cursor: pointer;
    }
</style>